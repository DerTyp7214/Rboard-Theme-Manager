<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="md_color_button_text">@color/colorAccent</item>
        <item name="md_ripple_color">@color/colorAccent</item>
        <item name="android:windowBackground">@color/colorPrimary</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:textColorPrimary">@color/primaryText</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:navigationBarColor">@color/colorPrimary</item>
        <item name="android:statusBarColor">@color/colorPrimaryTransparent</item>
        <item name="toolbarStyle">@style/ActionBar</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">true</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowContentTransitions">true</item>
    </style>

    <style name="TextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="boxStrokeColor">@color/inputBorder</item>
        <item name="boxStrokeWidth">1dp</item>
    </style>

    <style name="ActionBar" parent="Widget.MaterialComponents.Toolbar">
        <item name="titleTextColor">@color/primaryText</item>
    </style>

    <style name="BottomSheet" parent="@style/Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bottom_sheet</item>
    </style>

    <style name="BaseBottomSheetDialog" parent="@style/Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="bottomSheetStyle">@style/BottomSheet</item>
    </style>

    <style name="BottomSheetDialogTheme" parent="BaseBottomSheetDialog">
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@color/colorPrimary</item>
    </style>

    <style name="PopupMenu" parent="@style/Widget.MPM.Menu">
        <item name="android:popupBackground">@drawable/popup_background</item>
        <item name="mpm_primaryTextColor">@color/primaryText</item>
        <item name="mpm_secondaryTextColor">@color/primaryTextSec</item>
        <item name="mpm_activeIconColor">@color/primaryTextSec</item>
    </style>

    <style name="darkAlertDialogFullScreen" parent="@style/Theme.AppCompat.Dialog.Alert">
        <item name="android:background">#EBEBEB</item>
        <item name="android:colorAccent">?attr/colorAccent</item>
        <item name="android:colorButtonNormal">?attr/colorAccent</item>
        <item name="android:textColor">?attr/colorAccent</item>
        <item name="android:colorControlActivated">?attr/colorAccent</item>
        <item name="android:windowBackground">#F7F7F7</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:navigationBarColor">#EBEBEB</item>
        <item name="android:statusBarColor">#EBEBEB</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

</resources>
