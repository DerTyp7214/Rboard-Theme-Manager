<androidx.preference.PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory
        android:key="general"
        android:title="@string/ui">

        <DropDownPreference
            android:title="@string/theme_pref"
            android:key="theme"
            android:entries="@array/theme_prefs"
            android:entryValues="@array/theme_prefs"
            android:defaultValue="Select" />

        <DropDownPreference
            android:title="@string/themePath_pref"
            android:key="themePath"
            android:entries="@array/themePath_prefs"
            android:entryValues="@array/themePath_prefs"
            android:defaultValue="Select" />
        <com.dertyp7214.logs.preferences.LogModeLegacy />
    </PreferenceCategory>
</androidx.preference.PreferenceScreen>